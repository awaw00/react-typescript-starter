{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        },
        "types": [
            "core-js"
        ]
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "global.d.ts"
    ]
}
